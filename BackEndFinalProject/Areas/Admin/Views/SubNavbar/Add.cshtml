@using BackEndFinalProject.Areas.Admin.ViewModels.SubNavbar
@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Navbars</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-subnavbar-add">
                        @* <div class="text-danger" asp-validation-summary="ModelOnly"></div>*@

                        <div class="form-group">
                            <label>Categories</label>
                            <select asp-for="NavbarId" asp-items="@(new SelectList(Model.Navbar, nameof(NavbarListItemViewModel.Id), nameof(NavbarListItemViewModel.Title)))" class="form-select"></select>
                            <span asp-validation-for="NavbarId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Url"></label>
                            <input asp-for="Url" class="form-control">
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Order"></label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>
