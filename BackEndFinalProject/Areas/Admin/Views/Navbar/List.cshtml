@using BackEndFinalProject.Areas.Admin.ViewModels.Navbar

@model List<ListViewModel>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Navbars</h4>
        </div><!--end card-header-->
        <div class="">
            <a asp-route="admin-navbar-add" target="_blank" class="btn btn-secondary">Add new Navbar</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>LastName</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var navbar in Model)
                        {
                            <tr>
                                <td>@navbar.Title</td>
                                <td>@navbar.Order</td>
                                <td>@navbar.IsShowHeader</td>
                                <td>@navbar.IsShowFooter</td>
                                <td class="text-end">
                                    <a asp-route="admin-navbar-update" asp-route-id="@navbar.Id"><i class="las la-pen text-secondary font-16"></i></a>

                                    <form class="d-none" method="POST" asp-route="admin-navbar-delete" asp-route-id="@navbar.Id" id="update-@navbar.Id">
                                    </form>

                                    <button type="submit" form="update-@navbar.Id"><i class="las la-trash-alt text-secondary font-16"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>
